---
import config from "../../underflow.config";
import { loadExtension } from "../lib/loadExtension";


for (const plugin of config.plugins) {
	loadExtension(plugin.name, plugin.activate, plugin.version)
}


import MessageHandler from "../components/MessageHandler/Handler.svelte";
import { Sidebar } from "../components/Sidebar";
import "../style/global.css";
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Sidebar></Sidebar>
		<main class="ml-[80px] p-8">
			<slot />
		</main>
		<MessageHandler client:load></MessageHandler>
	</body>
</html>